{
    "root": true,
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "ecmaVersion": 2015,
        "sourceType": "module",
        "ecmaFeatures": {
            "legacyDecorators": true,
            "jsx": true
        }
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    // https://github.com/standard/standard/blob/master/docs/RULES-en.md
    "globals": {
        "_": true
    },
    "ignorePatterns": [
        "//dist//",
        "//node_modules//*",
        "**//*.ejs"
    ],
    "overrides": [
    {
        "files": [
            "*.js",
            "*.jsx"
        ],
        "extends": [
            "eslint:recommended",
            "google"
            // "plugin:prettier/recommended"
        ]
    },
    {
        "files": [
            "*.ts",
            "*.tsx",
            "*.d.ts"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:vue/essential"
            // "plugin:prettier/recommended"
        ]
    },
    {
        "files": [
            "*.vue"
        ],
        "parser": "vue-eslint-parser",
        "parserOptions": {
            "parser": "babel-eslint"
        },
        "extends": [
            "eslint:recommended",
            "plugin:vue/essential"
            // "plugin:prettier/recommended"
        ]
    },
    {
        "files": [
            "*.tsx",
            "*.jsx",
            "*.vue"
        ],
        "rules": {
            "@typescript-eslint/no-unused-vars": [
                0,
                "always"
            ],
            "no-unused-vars": 0
        }
    }],
    "plugins": [
        "vue",
        "html",
        "prettier"
    ]
}