{
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmitOnError": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "target": "es5",
        "alwaysStrict": true,
        "importHelpers": true,
        "incremental": true,
        "sourceMap": true,
        "outDir": "./dist/lib",
        "baseUrl": "./",
        "noEmit": false,
        "lib": [
            "ES2015", "DOM", "ES2016", "ES2017"
        ],
        "types": ["node", "webpack"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", ".*"]
}